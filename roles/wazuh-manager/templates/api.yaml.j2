# Wazuh API Configuration
# Generated by Ansible

host: {{ wazuh_manager_api_bind_addr | default('0.0.0.0') }}
port: {{ wazuh_manager_api_port | default(55000) }}

# HTTPS Configuration
https:
  enabled: {{ wazuh_manager_api_https | default(true) | lower }}
  key: "api/configuration/ssl/server.key"
  cert: "api/configuration/ssl/server.crt"
  use_ca: false
  ca: "api/configuration/ssl/ca.crt"
  ssl_protocol: "auto"
  ssl_ciphers: ""

# Logging
logs:
  level: "info"
  format: "plain"

# CORS
cors:
  enabled: false
  source_route: "*"
  expose_headers: "*"
  allow_headers: "*"
  allow_credentials: false

# Cache
cache:
  enabled: true
  time: 0.75

# Access control
access:
  max_login_attempts: 50
  block_time: 300
  max_request_per_minute: 300

# Upload configuration
upload_configuration:
  remote_commands:
    localfile:
      enabled: true
      exceptions: []
    wodle_command:
      enabled: true
      exceptions: []

# Rate limiting
experimental_features: false
